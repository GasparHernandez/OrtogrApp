<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:id="@+id/numero_palabra_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21."
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/palabra_text_view"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Duunviro"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:id="@+id/bien_image_view"
            android:src="@drawable/ic_svgbien"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:id="@+id/mal_image_view"
            android:src="@drawable/ic_svgmal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>